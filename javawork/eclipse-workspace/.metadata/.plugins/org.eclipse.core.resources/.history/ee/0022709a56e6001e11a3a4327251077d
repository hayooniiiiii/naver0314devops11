package day0320;

import java.util.Random;

public class Ex2_Randomclass {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Random r=new Random();
		System.out.println("***Random 클래스를 이용한 난수 구하기");
		System.out.println("1. 0~9난수 구하기");
		for(int i=1;i<=5;i++) {
			int n=r.nextInt(10);
			System.out.printf("%4d",n);
		}
		System.out.println();
		System.out.println("=".repeat(30));
		System.out.println("1. 1~10난수 구하기");
		for(int i=1;i<=5;i++) {
			int n=r.nextInt(10);
			System.out.printf("%4d",n+1);
		}
		System.out.println();
		System.out.println("=".repeat(30));


	}

}
